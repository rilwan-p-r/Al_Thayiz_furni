		<!-- Overlay -->
		<div class="container__overlay">	
			<div class="overlay">
				<div class="overlay__panel overlay--left">
					<% if (messages.error) { %>
						<p class="error-message" style="color: red; font-size: 18px; font-weight: bold;"><%= messages.error %></p>
					<% } %>					
					<a class="btn" id="signIn" href="/login">Sign In</a>
				</div>
				<div class="overlay__panel overlay--right">
					<button class="btn" id="signUp">Sign Up</button>
				</div>
			</div>
		</div>
	</div>
