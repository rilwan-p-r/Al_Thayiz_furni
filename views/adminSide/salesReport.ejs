<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Sales Reoprt</h2>
            <!-- <p>Lorem ipsum dolor sit amet.</p> -->
        </div>
        <div>
            <input type="text" placeholder="Search order ID" class="form-control bg-white" />
        </div>
    </div>
    <div class="card mb-4">
        <header class="card-header">
            <div class="row gx-3">
                <div class="col-lg-4 col-md-6 me-auto">
                    <input type="text" placeholder="Search..." class="form-control" />
                </div>
            </div>
        </header>
        <!-- card-header end// -->
        <div class="card-body">
            <!-- <div class="table-responsive"> -->
                <form method="post">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <!-- <th>#ID</th> -->
                            <th scope="col">orderId</th>
                            <th scope="col">user</th>
                            <th scope="col">Payment Method</th>
                            <th scope="col">ordered Date</th>
                            <th scope="col">Amount</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        <% sales.sort((a, b) => new Date(b.orderDate) - new Date(a.orderDate)).forEach(sale => { %>
                            <tr>
                                <td style="color: green;"><%= sale._id %></td>
                                <td><%= sale.userId ? sale.userId.name : "Unknown" %></td>
                                <td><%= sale.paymentMethod %></td>
                                <td><%= sale.orderDate ? moment(sale.orderDate).format('MM/DD/YYYY') : "" %></td>
                                <td><%= sale.totalAmount %></td>
                            </tr>
                        <% }); %>
                         
                           
                    </tbody>
                </table>
                </form>
            <!-- </div> -->
            <!-- table-responsive //end -->
        </div>
        <!-- card-body end// -->
    </div>
